<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="fr.ece.projetlogna.controller.LoginController"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #8B2929;">

    <VBox alignment="CENTER" layoutX="250.0" layoutY="150.0" prefWidth="300.0" spacing="20.0"
          style="-fx-background-color: #FAF0E6; -fx-background-radius: 15;">
        <padding>
            <Insets top="40" right="40" bottom="40" left="40"/>
        </padding>

        <Label text="LÃ´gna" textFill="#3B1414"
               style="-fx-font-size: 48; -fx-font-weight: bold; -fx-font-family: 'Serif';">
        </Label>

        <Label text="Connexion" textFill="#3B1414"
               style="-fx-font-size: 24; -fx-font-weight: bold;">
        </Label>

        <VBox spacing="10">
            <TextField fx:id="usernameField" promptText="Nom d'utilisateur"
                       style="-fx-background-color: white; -fx-border-color: #CCCCCC; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;">
            </TextField>

            <PasswordField fx:id="passwordField" promptText="Mot de passe"
                           style="-fx-background-color: white; -fx-border-color: #CCCCCC; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;">
            </PasswordField>
        </VBox>

        <Button fx:id="loginButton" text="Connexion" onAction="#handleLogin"
                prefWidth="220.0" prefHeight="40.0"
                style="-fx-background-color: #8B2929; -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;">
        </Button>

        <Label fx:id="errorLabel" textFill="red" style="-fx-font-size: 12;" wrapText="true" alignment="CENTER"/>

        <VBox alignment="CENTER" spacing="5">
            <Label text="Pas encore de compte ?" textFill="#3B1414" style="-fx-font-size: 14;"/>
            <Hyperlink fx:id="registerLink" text="Inscrivez vous" onAction="#goToRegister"
                       style="-fx-text-fill: #8B2929; -fx-font-size: 14; -fx-underline: true;">
            </Hyperlink>
        </VBox>

    </VBox>

</AnchorPane>