<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.ece.projetlogna.controller.CompteController">

    <!-- En-tête -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #8B2929; -fx-padding: 15;">
            <Label style="-fx-font-size: 36; -fx-font-weight: bold; -fx-font-family: 'Serif';" text="Lôgna" textFill="white">
                <HBox.margin>
                    <Insets left="30" />
                </HBox.margin>
            </Label>

            <Region HBox.hgrow="ALWAYS" />

            <Button fx:id="homeButton" onAction="#goToHome" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16; -fx-cursor: hand;" text="Accueil">
                <HBox.margin>
                    <Insets right="30" />
                </HBox.margin>
            </Button>
        </HBox>
    </top>

    <!-- Menu latéral gauche -->
    <left>
        <VBox prefHeight="705.0" prefWidth="170.0" spacing="0" style="-fx-background-color: #8B2929;">
            <padding>
                <Insets bottom="30" top="30" />
            </padding>

            <Button onAction="#goToCategories" prefHeight="50" prefWidth="200" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 18; -fx-alignment: CENTER_LEFT; -fx-padding: 15 30; -fx-cursor: hand;" text="Catégories">
            </Button>

            <Button onAction="#goToForum" prefHeight="50" prefWidth="200" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 18; -fx-alignment: CENTER_LEFT; -fx-padding: 15 30; -fx-cursor: hand;" text="Forum">
            </Button>

            <Button prefHeight="50" prefWidth="200" style="-fx-background-color: #A03838; -fx-text-fill: white; -fx-font-size: 18; -fx-alignment: CENTER_LEFT; -fx-padding: 15 30; -fx-font-weight: bold;" text="Mon compte">
            </Button>
        </VBox>
    </left>

    <!-- Contenu central -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="30" style="-fx-background-color: #FAF0E6;">
            <padding>
                <Insets bottom="50" left="50" right="50" top="50" />
            </padding>

            <Label style="-fx-font-size: 48; -fx-font-weight: bold; -fx-font-family: 'Serif';" text="Mon Compte" textFill="#3B1414">
            </Label>

            <VBox maxWidth="600" spacing="25" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 40;">
                <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Informations personnelles" textFill="#3B1414">
                </Label>

                <VBox spacing="10">
                    <Label style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #3B1414;" text="Nom d'utilisateur :" />
                    <Label fx:id="usernameLabel" style="-fx-font-size: 16; -fx-text-fill: #666;" text="utilisateur_demo" />
                </VBox>

                <VBox spacing="10">
                    <Label style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #3B1414;" text="Email :" />
                    <Label fx:id="emailLabel" style="-fx-font-size: 16; -fx-text-fill: #666;" text="demo@exemple.com" />
                </VBox>

                <VBox spacing="10">
                    <Label style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #3B1414;" text="Niveau de lecture :" />
                    <Label fx:id="niveauLabel" style="-fx-font-size: 16; -fx-text-fill: #666;" text="Intermédiaire" />
                </VBox>

                <VBox spacing="10">
                    <Label style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #3B1414;" text="Livres lus :" />
                    <Label fx:id="livresLusLabel" style="-fx-font-size: 16; -fx-text-fill: #666;" text="0 livre" />
                </VBox>

                <Separator style="-fx-background-color: #CCCCCC;" />

                <HBox alignment="CENTER" spacing="15">
                    <Button fx:id="editButton" onAction="#editProfile" prefHeight="45" prefWidth="180" style="-fx-background-color: #8B2929; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;" text="Modifier le profil">
                    </Button>

                    <Button fx:id="logoutButton" onAction="#logout" prefHeight="45" prefWidth="180" style="-fx-background-color: #666; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;" text="Se déconnecter">
                    </Button>
                </HBox>
            </VBox>
        </VBox>
    </center>

</BorderPane>
